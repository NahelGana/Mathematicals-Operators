def summation(sum = 0) :
    answer = True ;
    while (answer == True) :
        number = input("Do you want to sum a new value ? If yes, give the number. Else, write 'No'.") ;
        if ((type(number) != float) and (type(number) != int)) :
            answer = False ;
        elif (number != 'No') :
            number = float(number) ;
            sum = sum + number ;
    return sum ;
